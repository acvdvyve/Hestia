doctype html
html
  head
    meta[name="viewport" content="width=device-width, initial-scale=1.0"]
    title
      = content_for?(:title) ? yield(:title) : 'VGK | Vlaamse Geneeskundige Kring'
    meta name="description" content="#{content_for?(:description) ? yield(:description) : 'Vlaamse Geneeskundige Kring'}"
    == stylesheet_link_tag "application", :media => 'all', 'data-turbolinks-track' => true
    == javascript_include_tag 'application', 'data-turbolinks-track' => true
    == csrf_meta_tags
  body
    script
      $(document).ready(function() {
        $('a[href="' + this.location.pathname + '"]').parent().addClass('active');
      });
    header
      == render 'layouts/navigation'
      == render 'layouts/divide_nav'
      == render 'layouts/navigation2'
    main[role="main"]
      == render 'layouts/messages'
      == yield
  footer
    h3.text-center Sponsors
    p.text-center Copyright &copy 2015 Vlaamse Geneeskundige Kring

